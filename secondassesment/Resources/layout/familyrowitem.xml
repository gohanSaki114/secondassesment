<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="5dp"
  
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:padding="20dp"
          android:background="@drawable/rowbackground"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/fatherText"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Father name:"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
     <TextView
        android:id="@+id/motherText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fatherText"
        android:text="Mother name:"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
     <TextView
        android:id="@+id/childText"
           app:layout_constraintTop_toBottomOf="@+id/motherText"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Child name:"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
     <TextView
          app:layout_constraintTop_toBottomOf="@+id/childText"
        android:id="@+id/addresstext"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Address name:"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>


     <TextView
        android:id="@+id/fathername"
       app:layout_constraintStart_toEndOf="@+id/fatherText"
        android:text="Father name is sdaf adfdsdsafsdfdsadfsdfdssd:"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
        android:layout_height="wrap_content"/>
     <TextView
        android:id="@+id/mothername"
       app:layout_constraintStart_toEndOf="@+id/motherText"
        app:layout_constraintTop_toBottomOf="@+id/fatherText"
        android:text="Mother name:"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
     <TextView
        android:id="@+id/childname"
           app:layout_constraintTop_toBottomOf="@+id/motherText"
          app:layout_constraintStart_toEndOf="@+id/childText"
        android:text="Child name:"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
     <TextView
          app:layout_constraintTop_toBottomOf="@+id/childText"
        android:id="@+id/addressname"
      app:layout_constraintStart_toEndOf="@+id/addresstext"
        android:text="Address name:"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/deletebutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
